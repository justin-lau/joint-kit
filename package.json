{
  "name": "joint-kit",
  "version": "0.0.18",
  "description": "A server-side toolset for building data layers and RESTful endpoints with NodeJS",
  "author": "|M| <manicprone@gmail.com>",
  "license": "MIT",
  "main": "joint.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:manicprone/joint-kit.git"
  },
  "scripts": {
    "build": "cross-env NODE_ENV=build rollup -c",
    "prepublish": "npm run build",
    "lint": "eslint ./ --cache --ignore-pattern .gitignore",
    "test": "cross-env NODE_ENV=test mocha --require babel-register test/**/*.spec.js",
    "precommit-message": "echo 'Pre-commit checks (linting)...' && exit 0",
    "knex": "babel-node ./node_modules/.bin/knex --knexfile ./test/db/bookshelf/knexfile.js",
    "migrate:make": "npm run knex migrate:make",
    "seed:make": "npm run knex seed:make"
  },
  "pre-commit": [
    "precommit-message",
    "lint"
  ],
  "dependencies": {
    "bluebird": "^3.5.0",
    "lodash": "^4.17.4",
    "moment": "^2.18.1"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-env": "^1.5.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "babel-register": "^6.24.1",
    "bookshelf": "^0.10.3",
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "chai-http": "^3.0.0",
    "cross-env": "^5.0.1",
    "eslint": "^3.19.0",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-plugin-import": "^2.3.0",
    "express": "^4.15.4",
    "knex": "0.12.0",
    "mocha": "^3.4.2",
    "pre-commit": "^1.2.2",
    "rollup": "^0.45.2",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-uglify": "^2.0.1",
    "sqlite3": "^3.1.8"
  }
}
